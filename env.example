# =====================================================
# Environment Variables Template
# =====================================================
# Copiază acest fișier în .env și completează valorile
# cp .env.example .env
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Găsești aceste valori în Supabase Dashboard > Settings > API

# URL-ul proiectului Supabase
SUPABASE_URL=https://your-project-id.supabase.co

# Anon/Public Key (safe pentru client-side)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service Role Key (DOAR pentru server-side, NU expune în client!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# JWT Secret (pentru verificare tokens)
SUPABASE_JWT_SECRET=your-jwt-secret-here

# =====================================================
# DATABASE CONNECTION
# =====================================================
# Connection string direct la PostgreSQL (opțional, pentru migrări)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# =====================================================
# APPLICATION SETTINGS
# =====================================================

# Environment: Development | Staging | Production
ASPNETCORE_ENVIRONMENT=Development

# URL-uri aplicație
API_URL=https://localhost:5000
CLIENT_URL=https://localhost:5001

# CORS - domenii permise (separate prin virgulă)
ALLOWED_ORIGINS=https://localhost:5001,https://your-domain.com

# =====================================================
# JWT SETTINGS
# =====================================================
JWT_ISSUER=https://your-project-id.supabase.co/auth/v1
JWT_AUDIENCE=authenticated
JWT_EXPIRY_MINUTES=60

# =====================================================
# REDIS (opțional, pentru caching)
# =====================================================
REDIS_CONNECTION_STRING=localhost:6379
REDIS_INSTANCE_NAME=SMU_

# =====================================================
# EMAIL SERVICE (opțional)
# =====================================================
# Folosit pentru notificări email
SENDGRID_API_KEY=SG.xxxxx
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Sistem Management Universitar

# =====================================================
# LOGGING
# =====================================================
# Minimum log level: Verbose | Debug | Information | Warning | Error | Fatal
LOG_LEVEL=Information

# Application Insights (opțional, pentru monitoring Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxx

# Seq logging server (opțional)
SEQ_URL=http://localhost:5341
SEQ_API_KEY=

# =====================================================
# FEATURE FLAGS
# =====================================================
FEATURE_REALTIME_NOTIFICATIONS=true
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_MFA=false
FEATURE_GRADE_APPROVAL_WORKFLOW=true

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =====================================================
# FILE STORAGE
# =====================================================
# Max file size în MB
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png

# =====================================================
# NOTES
# =====================================================
# 1. NU commita niciodată fișierul .env în Git!
# 2. Folosește secrets manager pentru producție
# 3. Rotește cheile periodic
# 4. Service Role Key oferă acces complet - păstrează-l în siguranță!
